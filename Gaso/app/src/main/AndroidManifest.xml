<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ericmguimaraes.gaso">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.registers.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.registers.CarRegisterActivity"
            android:label="@string/title_activity_car_register"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.registers.UserRegisterActivity"
            android:label="@string/title_activity_user_register"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".lists.UserListActivity"
            android:label="@string/title_activity_user_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".lists.CarListActivity"
            android:label="@string/title_activity_car_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".config.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/gaso_googlemaps_key" />

        <activity
            android:name=".lists.SpentListActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.registers.SpentRegisterActivity"></activity>
    </application>

</manifest>
